<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/blackgray">

    <ImageView
        android:id="@+id/songImageList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/songNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/songImageList"
        android:text="MÜZİK"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/artistNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songNameList"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/songImageList"
        android:text="Sanatçı"

        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/songDurationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="04:00"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="12sp" />

</RelativeLayout>
